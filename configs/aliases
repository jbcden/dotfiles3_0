# Unix
alias mkdir='mkdir -p'
alias l='ls -CF'
alias ls='ls -G'
alias ll='ls -alF'
alias la='ls -A'
alias e="$EDITOR"
alias v="$VISUAL"

# vim
alias vim="stty stop '' -ixoff ; vim"
alias vi='vim'

# tmux
alias tls='tmux ls'
alias tat='tmux a -t'

# Bundler
alias b="bundle"
alias be="bundle exec"

# Include custom aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local

# If you use neovim instead of stock vim
# alias vim='nvim'
